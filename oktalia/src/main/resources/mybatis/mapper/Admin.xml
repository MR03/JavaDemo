<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pw.mr03.oktalia.mapper.AdminMapper">
    <resultMap id="AdminResultMap" type="pw.mr03.oktalia.entity.Admin">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="realname" property="realname" jdbcType="VARCHAR" />
        <result column="pwd" property="pwd" jdbcType="VARCHAR" />
    </resultMap>
    <select id="getById" resultMap="AdminResultMap" parameterType="java.lang.Integer">
        select
        realname
        from ok_admin
        where id = #{id}
    </select>
    <insert id="addAdmin" parameterType="pw.mr03.oktalia.request.RegisterAdminReq">
        insert into
        ok_admin(realname,pwd,mobile)
        values (
        #{realname,jdbcType=CHAR},
        #{pwd,jdbcType=CHAR},
        #{mobile,jdbcType=CHAR})
    </insert>
</mapper>